/*FUEL  AND  TOTAL PRICE CALCULATOR*/
#include<stdio.h>
void main()
{
    int dist;
    float effi,fuel,rated,ratep,tot;
    char type,diesel,petrol;
    printf("ENTER THE DISTANCE TRAVELLED \n ");
    scanf("%d",&dist);
    printf("ENTER THE DISTANCE TRAVELLED IN 1 LITRE \n");
    scanf("%f",&effi);
    fuel=dist/effi;
    printf("\t TYPE OF FUEL \n");
    printf("\t A: DIESEL \n");
    printf("\t B: PETROL \n");
    printf(" ENTER THE TYPE OF FUEL \n");
    scanf("%s",&type);
    switch(type)
    {
    case'A':
    
    {
        printf("DIESEL REQUIRED FOR THE DISTANCE =%f litres \n",fuel);
        printf("ENTER THE RATE OF DIESEL \n RS ");
        scanf("%f",&rated);
        tot=fuel*rated;
        printf("TOTAL FUEL PRICE IS RS %f \n",tot);
        break;
     }
    case 'B':    
        {
        printf(" PETROL required for the distance= %f litres\n",fuel);
        printf("ENTER THE RATE OF PETROL \n RS ");
        scanf("%f",&ratep);
        tot=fuel*ratep;
        printf("TOTAL PRICE OF THE FUEL RS %f\n",tot);
        break;
        }
        default:
        printf("SELECT THE APPRORIATE OPTION");
    }
    if(effi>17)
    {
        printf("VEHICLE IS EFFICIENT\n");
    }
    else
    {
    printf("VEHICLE NOT EFFICIENT\n");
    }
}
